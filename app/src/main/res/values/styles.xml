<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--                  BUTTON CHANGE MATERIAL DESIGN                        -->
    <style name="MaterialButtonChange" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--                  BUTTON POSITIVE MATERIAL DESIGN                        -->
    <style name="MaterialButtonPositive" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--                  BUTTON NEGATIVE MATERIAL DESIGN                        -->
    <style name="MaterialButtonNegative" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">#D32F2F</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
