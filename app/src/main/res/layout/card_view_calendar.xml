<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="6dp"
    android:layout_margin="5dp">


     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent" >

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/cardText_Name"
             android:layout_alignParentTop="true"
             android:gravity="center"
             android:textStyle="bold|italic"
             android:textSize="16sp" />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:id="@+id/divider"
             android:layout_below="@+id/cardText_Name"
             android:background="@color/divider"/>

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/cardText_Date"
             android:layout_below="@+id/divider"
             android:gravity="center"
             android:textSize="13sp" />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/cardText_Days"
             android:layout_below="@+id/cardText_Date"
             android:gravity="center"
             android:textSize="12sp" />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/cardText_Location"
             android:layout_below="@+id/cardText_Days"
             android:gravity="center"
             android:textSize="12sp" />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/cardText_realZoigl"
             android:layout_below="@id/cardText_Location"
             android:gravity="center"
             android:textSize="12sp" />

     </RelativeLayout>

</android.support.v7.widget.CardView>